# Supabase Configuration (required)
VITE_SUPABASE_URL=
VITE_SUPABASE_PUBLISHABLE_KEY=
VITE_SUPABASE_PROJECT_ID=

# App Environment: "demo" | "prod"
# demo = noindex/nofollow on public pages (default)
# prod = indexable, absolute canonical URLs
VITE_APP_ENV=demo

# Backend Environment: "test" | "live"
# test = development/staging Supabase project (default)
# live = production Supabase project (requires SITE_URL + creds)
# IMPORTANT: demo + live is forbidden (cross-env protection)
VITE_BACKEND_ENV=test

# Site URL (required when BACKEND_ENV=live)
# Example: https://seasonaltalent.se
VITE_SITE_URL=

# Demo Feature Flags (optional)
VITE_DEMO_DEBUG=false
VITE_DEMO_ENABLED=true
VITE_ALLOW_DEMO_SEED=false

# Feature Flags
# VITE_ENABLE_PAYMENTS=false  # Set to true + BACKEND_ENV=live to require Stripe vars

# Stripe (required when ENABLE_PAYMENTS=true AND BACKEND_ENV=live)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
# VITE_STRIPE_PUBLIC_KEY=pk_test_...

# Service role key (for CLI scripts only, never in frontend)
# SUPABASE_SERVICE_ROLE_KEY=
